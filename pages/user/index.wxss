page {
  background-color: #f4f0e6;
}
.user_info_wrap {
  background-color: #bbded6;
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  height: 49vh;
  filter: blur(8rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.user_info_wrap .user_btn {
  position: absolute;
  top: 39%;
  left: 39%;
  padding: 10rpx 30rpx;
  border: 10rpx solid #2694ab;
  color: #525252;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: #f5b9b9;
}
.user_content .user_main .history_wrap navigator .his_name {
  font-size: 29rpx;
}
.user_content .user_main .orders_wrap {
  background: #fff;
  margin-top: 30rpx;
  font-size: 29rpx;
}
.user_content .user_main .orders_wrap .title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .orders_content {
  display: flex;
  text-align: center;
}
.user_content .user_main .orders_wrap .orders_content navigator {
  flex: 1;
}
.user_content .user_main .orders_wrap .orders_content navigator .iconfont,
.user_content .user_main .orders_wrap .orders_content navigator .icon-shoucang {
  color: #f5b9b9;
}
.user_content .user_main .orders_wrap .orders_content navigator .order_name {
  font-size: 29rpx;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx ;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
